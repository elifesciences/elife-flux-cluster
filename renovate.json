{
  "extends": [
    "config:recommended",
    ":prHourlyLimitNone"
  ],
  "timezone": "Europe/London",
  "kubernetes": {
    "fileMatch": [
      "^system/monitoring/kube-web-view/deployment\\.yaml$",
      "kustomizations/.+\\.yaml$"
    ]
  },
  "assigneesFromCodeOwners": true,
  "flux": {
    "fileMatch": [
      "deployments/.+\\.yaml$",
      "system/.+\\.yaml$",
      "clusters/.+\\.yaml$",
      "kustomizations/.+\\.yaml$",
      "policies/.+\\.yaml$",
      "nodes/.+\\.yaml$",
      "teams/.+\\.yaml$",
      "crds/.+\\.yaml$"
    ]
  },
  "platformAutomerge": true,
  "packageRules": [
    {
      "matchDepNames": [
        "podinfo"
      ],
      "enabled": false
    },
    {
      "matchFileNames": [
        "mise.toml"
      ],
      "matchDepNames": [
        "kubectl"
      ],
      "enabled": false
    },
    {
      "matchFileNames": [
        "mise.toml"
      ],
      "automerge": true
    }
  ]
}
